function no-cmd() { ! command -v "$1" > /dev/null; }
no-cmd dpkg && return 1

if [[ -n "${XCOLORS}" && -f "${XCOLORS}" ]]; then
  source "${XCOLORS}"
else
  exit 255
fi

if [[ $1 == "delete" ]]; then
  dpkg -l | grep "^rc" | awk "{print \$2}" | sudo xargs dpkg --purge
else
  echo " => Use $(@D9 ${0##*/}) $(@R3 delete) to delete trash configurations."
  dpkg -l | grep "^rc"
fi
