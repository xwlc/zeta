# Repository: https://github.com/xwlc/zeta

IFS='␟' # r=4, w=2, x=1
for file in $(find -type f -print0 | sed -e 's/\x0/␟/g'); do
  chmod 0644 "${file}"    # -, rw-, r--, r--
done

for folder in $(find -type d -print0 | sed -e 's/\x0/␟/g'); do
  chmod 0755 "${folder}"  # d, rwx, r-x, r-x
done
